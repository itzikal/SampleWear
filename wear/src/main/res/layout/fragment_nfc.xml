<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:id="@+id/nfc_main"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@drawable/nfc_background"
             tools:context="com.boatbook.sailinglogwear.fragments.NfcFragment">


    <ImageView
        android:layout_marginTop="5dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/nfc_logo"
        android:layout_width="40dp"
        android:layout_height="40dp"/>

    <TextView
        android:background="@drawable/gray_shpae_for_statistics"
        android:layout_margin="5dp"
        android:padding="2dp"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:gravity="center"
        android:text="swipe your watch to board the boat"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</FrameLayout>
